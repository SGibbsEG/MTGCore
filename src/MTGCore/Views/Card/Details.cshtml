@model MTGCore.Dtos.Models.CardDto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-lg-8">
            <h1>Details</h1>
        </div>
        <div class="col-lg-4">
                <a class="btn btn-primary pull-right" asp-controller="Deck" asp-action="AddToDeck">ADD TO DECK!</a>
        </div>
    </div>
<div>
    <h4>Card</h4>
    <hr />
    <dl class="row">
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.manaCost)
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.manaCost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.cmc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.cmc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.rarity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.rarity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.set)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.set)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.text)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.artist)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.artist)
        </dd>
        @if (Model.power != null || Model.toughness != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.power)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.power)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.toughness)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.toughness)
            </dd>
        }


    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
